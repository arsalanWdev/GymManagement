@model CreateUserViewModel

<h2 class="text-center my-4">Create User</h2>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label">Assign Roles</label>
                    <div class="border p-3 rounded">
                        @for (int i = 0; i < Model.Roles.Count; i++)
                        {
                            <div class="form-check">
                                <input type="checkbox" asp-for="Roles[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label">@Model.Roles[i].RoleName</label>
                                <input type="hidden" asp-for="Roles[i].RoleName" />
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4">Create User</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
