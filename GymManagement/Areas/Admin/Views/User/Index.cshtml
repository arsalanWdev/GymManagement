@model List<RoleBase.Areas.Admin.Controllers.UserRoleViewModel>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-primary">User Management</h3>
        <a asp-controller="User" asp-action="Create" class="btn btn-success px-4">
            <i class="fa fa-plus"></i> Create User
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-dark text-center">
                <tr>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="align-middle">@user.Email</td>
                        <td class="align-middle">@user.Roles</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm mx-1">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm mx-1">
                                <i class="fa fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Success Notification
        @if (TempData["SuccessMessage"] != null)
        {
            <text>toastr.success('@TempData["SuccessMessage"]');</text>
        }

            // Error Notification
        @if (TempData["ErrorMessage"] != null)
        {
            <text>toastr.error('@TempData["ErrorMessage"]');</text>
        }
        });
    </script>
}
