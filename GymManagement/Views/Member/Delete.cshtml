@model GymManagement.Models.Member

@{
    ViewData["Title"] = "Delete Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title mb-0">Delete Member</h3>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this member?</h5>
            <div class="row mt-4">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Full Name:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Gender:</dt>
                        <dd class="col-sm-8">@Model.Gender</dd>

                        <dt class="col-sm-4">Contact:</dt>
                        <dd class="col-sm-8">@Model.Contact</dd>

                        <dt class="col-sm-4">Member Status:</dt>
                        <dd class="col-sm-8">@Model.MemberStatus</dd>
                    </dl>
                </div>
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.MemberImage))
                    {
                        <img src="@Url.Content("~/images/" + Model.MemberImage)" alt="@Model.FullName" class="img-thumbnail" style="max-width: 150px;" />
                    }
                    else
                    {
                        <p class="text-muted">No image available</p>
                    }
                </div>
            </div>

            <hr />

            <form asp-action="Delete" method="post" class="text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-times-circle"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
