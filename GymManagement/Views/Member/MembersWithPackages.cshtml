@model List<GymManagement.Models.Member>

@{
    ViewData["Title"] = "Members with Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <!-- Page Title -->
    <div class="text-center mb-4">
        <h1 class="text-primary">Members with Packages</h1>
    </div>
    <!-- Search Section -->
    <div class="mb-4">
        <form asp-action="MembersWithPackages" method="get" class="input-group shadow-sm bg-white p-3 rounded-lg">
            <input type="text" name="searchString" class="form-control" placeholder="Search by name or contact..." />
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-search"></i> Search
            </button>
        </form>
    </div>

    <!-- Beautiful Table -->
    <div class="table-responsive shadow-sm bg-white p-3 rounded-lg">
        <table class="table table-striped table-hover table-sm">
            <thead class="table-dark text-white">
                <tr>
                    <th><i class="fa fa-user"></i> Full Name</th>
                    <th><i class="fa fa-box"></i> Package Name</th>
                    <th><i class="fa fa-phone"></i> Contact</th>
                    <th><i class="fa fa-money-check-alt"></i> Admission Fee (₨)</th>
                    <th><i class="fa fa-money-bill-wave"></i> Monthly Fee (₨)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                    <tr>
                        <td>@member.FullName</td>
                        <td>@(member.Package?.PackageName ?? "No Package")</td>
                        <td>@member.Contact</td>
                        <td>₨ @String.Format("{0:N0}", member.AdmissionFee)</td>
                        <td>₨ @String.Format("{0:N0}", member.MonthlyFee)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Include Font Awesome for icons -->
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>

<!-- Custom CSS -->
<style>
    /* General Table Style */
    .table {
        font-size: 16px;
        border-radius: 8px;
    }

    thead.table-dark th {
        text-align: center;
        font-size: 16px;
    }

    tbody tr:hover {
        background-color: #f2f2f2;
    }

    /* Table container shadow effect */
    .table-responsive.shadow-sm {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    /* Header text styling */
    h1.text-primary {
        font-size: 2.5rem;
        font-weight: bold;
    }

  
</style>
