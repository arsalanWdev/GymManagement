@model GymManagement.Models.Package

@{
    ViewData["Title"] = "Delete Package";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white text-center">
            <h3>Delete Package</h3>
        </div>
        <div class="card-body">
            <h4 class="text-danger text-center mb-4">Are you sure you want to delete this package?</h4>
            <hr />
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="table-danger">Package Name</th>
                            <td>@Html.DisplayFor(model => model.PackageName)</td>
                        </tr>
                        <tr>
                            <th class="table-danger">Package Price</th>
                            <td>@Html.DisplayFor(model => model.PackagePrice)</td>
                        </tr>
                        <tr>
                            <th class="table-danger">Gender</th>
                            <td>@Html.DisplayFor(model => model.Gender)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>
