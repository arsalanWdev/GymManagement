@model GymManagement.Models.Package

@{
    ViewData["Title"] = "Edit Package";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3>Edit Package</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="p-3">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="PackageName" class="form-label fw-bold"></label>
                    <input asp-for="PackageName" class="form-control" placeholder="Enter Package Name" />
                    <span asp-validation-for="PackageName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PackagePrice" class="form-label fw-bold"></label>
                    <input asp-for="PackagePrice" type="number" class="form-control" placeholder="Enter Package Price" />
                    <span asp-validation-for="PackagePrice" class="text-danger"></span>
                </div>
                    
                <div class="mb-3">
                    <label asp-for="Gender" class="form-label fw-bold"></label>
                    <select asp-for="Gender" class="form-control">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
