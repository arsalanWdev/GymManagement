@model IEnumerable<GymManagement.Models.Package>

@{
    ViewData["Title"] = "Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary">Packages</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New Package
        </a>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <table class="table table-hover table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PackageName)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PackagePrice)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Gender)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-muted">No packages found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.PackageName)</td>
                                <td>@Html.DisplayFor(modelItem => item.PackagePrice)</td>
                                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                 
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            // Success Notification
        @if (TempData["SuccessMessage"] != null)
        {
            <text>toastr.success('@TempData["SuccessMessage"]');</text>
        }

            // Error Notification
        @if (TempData["ErrorMessage"] != null)
        {
            <text>toastr.error('@TempData["ErrorMessage"]');</text>
        }
        });
    </script>
}