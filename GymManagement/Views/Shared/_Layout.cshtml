<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymManagement</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymManagement.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">

    <style>
        /* Navbar Customization */
        .navbar {
            background: linear-gradient(45deg, #007bff, #6f42c1);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            color: #fff !important;
            font-weight: bold;
            font-size: 1.2rem; /* Smaller logo size */
        }

        .nav-link {
            color: #fff !important;
            font-weight: 500; /* Adjusted weight for compactness */
            font-size: 0.7rem; /* Reduced font size */
            padding: 5px 10px; /* Compact spacing */
            margin: 0 5px; /* Space between links */
        }

            .nav-link:hover {
                color: #ffc107 !important;
            }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;utf8,<svg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'><rect width='30' height='3' rx='1.5' fill='white'/><rect y='10' width='30' height='3' rx='1.5' fill='white'/><rect y='20' width='30' height='3' rx='1.5' fill='white'/></svg>");
        }

        /* Responsive Adjustments */
            .navbar-brand

        {
            font-size: 1rem;
        }

        .nav-link {
            font-size: 0.8rem;
            padding: 5px; /* Minimal padding for mobile view */
        }

        
    </style>

</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-dumbbell"></i> GymManagement
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        @if(User.IsInRole("Receptionist")){
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="WalkIn" asp-action="Index"><i class="fas fa-user-plus"></i> Add WalkIn</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Member" asp-action="Index"><i class="fas fa-user-plus"></i> Add Member</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Member" asp-action="MembersWithTrainers"><i class="fas fa-user-friends"></i> View Trainer Allocation</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Member" asp-action="MembersWithPackages"><i class="fas fa-box-open"></i> View Package Allocation</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Package" asp-action="Index"><i class="fas fa-box"></i> Add Package</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Trainer" asp-action="Index"><i class="fas fa-box"></i> Add Trainer</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="User" asp-action="Index"><i class="fas fa-box"></i> Add User</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Report" asp-action="DownloadReport"><i class="fas fa-box"></i> WalkIn Report</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="MemberReport" asp-action="Index"><i class="fas fa-box"></i>Member Report</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial"></partial>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer text-center">
        <div class="container">
            &copy; 2024 - GymManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
