@model GymManagement.Models.Trainer

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h2 class="text-center">Delete Trainer</h2>
        </div>
        <div class="card-body">
            <h4 class="text-center text-warning mb-4">Are you sure you want to delete this trainer?</h4>
            <dl class="row">
                <dt class="col-sm-3 text-end fw-bold">Full Name:</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3 text-end fw-bold">Trainer Type:</dt>
                <dd class="col-sm-9">@Model.TrainerType</dd>

                <dt class="col-sm-3 text-end fw-bold">Contact No:</dt>
                <dd class="col-sm-9">@Model.ContactNo</dd>

                <dt class="col-sm-3 text-end fw-bold">Status:</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>
            <div class="text-center mt-4">
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>
