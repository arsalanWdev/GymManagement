@model GymManagement.Models.Trainer

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h2 class="text-center">Edit Trainer</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div class="mb-3">
                    <label for="FullName" class="form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label for="TrainerType" class="form-label">Trainer Type</label>
                    <select asp-for="TrainerType" asp-items="new SelectList(ViewBag.TrainerTypes)" class="form-select">
                        <option value="">Select Trainer Type</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="ContactNo" class="form-label">Contact No</label>
                    <input asp-for="ContactNo" class="form-control" placeholder="Enter contact number" />
                    <span asp-validation-for="ContactNo" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label for="Status" class="form-label">Status</label>
                    <select asp-for="Status" asp-items="new SelectList(ViewBag.StatusOptions)" class="form-select">
                        <option value="">Select Status</option>
                    </select>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success w-50">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
                <div class="text-center">
                    <a href="/Trainer/Index" class="btn btn-warning">Back To List</a>
                </div>
            </form>
        </div>
    </div>
</div>
