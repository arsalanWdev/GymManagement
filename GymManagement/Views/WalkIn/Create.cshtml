@model GymManagement.Models.WalkIn

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Create Walk-In Entry</h1>

<div class="card shadow-lg mx-auto" style="max-width: 500px;">
    <div class="card-header bg-primary text-white text-center">
        <h4>Walk-In Details</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Full Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Contact" class="form-label"></label>
                <input asp-for="Contact" class="form-control" placeholder="Enter Contact Number" />
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="VisitDate" class="form-label"></label>
                <input asp-for="VisitDate" class="form-control" type="date" />
                <span asp-validation-for="VisitDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Purpose" class="form-label"></label>
                <textarea asp-for="Purpose" class="form-control" rows="3" placeholder="Enter Purpose of Visit"></textarea>
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>

            <div class="text-center">
                <input type="submit" value="Create" class="btn btn-success w-100" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>
